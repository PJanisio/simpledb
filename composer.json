{
    "name": "pjanisio/simpledb",
    "description": "A simple database abstraction layer",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Pawel Janisio",
            "email": "p.janisio@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "SimpleDB\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "SimpleDB\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-pcov": "PHP extension that provides line coverage",
        "ext-xdebug": "PHP extension that provides line coverage as well as branch and path coverage",
        "ext-uopz": "PHP extension"
    },
    
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2",
        "sebastian/global-state": "^5.0"
    },

    "keywords": [
        "database",
        "abstraction",
        "pdo",
        "mysql"
    ],
    "homepage": "https://github.com/PJanisio/simpledb",
    "support": {
        "email": "p.janisio@gmail.com",
        "issues": "https://github.com/PJanisio/simpledb/issues"
    }
}
